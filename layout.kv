<MenuScreen>:
    name: "menu"

    FloatLayout:

        Label:
            pos_hint:{"x":0.22,"y":0.8}
            size_hint: 0.56, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Minesweeper"

        Button:
            pos_hint:{"x":0.22,"y":0.6}
            size_hint: 0.56, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Singleplayer"
            on_release:
                root.manager.transition.direction = "up"
                root.play_btn(True)

        Button:
            pos_hint:{"x":0.22,"y":0.4}
            size_hint: 0.56, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Multiplayer"
            on_release:
                root.manager.transition.direction = "up"
                root.play_btn(False)


<ParametersScreen>:
    name: "parameters"

    board_width: board_width
    board_height: board_height

    blue_player: blue_player
    red_player: red_player
    green_player: green_player
    yellow_player: yellow_player

    FloatLayout:

        Label:
            text:"Board width: "
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.22, "top":0.95}
            size_hint: 0.3, 0.15

        TextInput:
            id: board_width
            text: '20'
            font_size: (root.width**2 + root.height**2) / 13**4 + 18
            multiline: False
            pos_hint: {"x": 0.6 , "top":0.95}
            size_hint: 0.2, 0.15

        Label:
            text:"Board height: "
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.22, "top":0.77}
            size_hint: 0.3, 0.15

        TextInput:
            id: board_height
            text: '20'
            font_size: (root.width**2 + root.height**2) / 13**4 + 18
            multiline: False
            pos_hint: {"x": 0.6, "top":0.77}
            size_hint: 0.2, 0.15

        Label:
            text:"Players:"
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.25, "top":0.55}
            size_hint: 0.5, 0.15

        ActionToggleButton:
            id: blue_player
            pos_hint:{"x":0.11,"y":0.25}
            size_hint: 0.18, 0.1
            text: "Blue"
            state: 'down'
            background_down: 'images/tile_player_blue.png'
            on_release:
                root.add_players(1)

        ActionToggleButton:
            id: red_player
            pos_hint:{"x":0.31,"y":0.25}
            size_hint: 0.18, 0.1
            text: "Red"
            background_down: 'images/tile_player_red.png'
            on_release:
                root.add_players(2)

        ActionToggleButton:
            id: green_player
            pos_hint:{"x":0.51,"y":0.25}
            size_hint: 0.18, 0.1
            text: "Green"
            background_down: 'images/tile_player_green.png'
            on_release:
                root.add_players(3)

        ActionToggleButton:
            id: yellow_player
            pos_hint:{"x":0.71,"y":0.25}
            size_hint: 0.18, 0.1
            text: "Yellow"
            background_down: 'images/tile_player_yellow.png'
            on_release:
                root.add_players(4)

        Button:
            pos_hint:{"x":0.22,"y":0.05}
            size_hint: 0.56, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Play"
            on_release:
                root.manager.transition.direction = "up"
                root.play_btn()

<SummaryScreen>:
    name: "summary"

    game_over: game_over

    blue_player_score: blue_player_score
    red_player_score: red_player_score
    green_player_score: green_player_score
    yellow_player_score: yellow_player_score

    FloatLayout:

        Label:
            id: game_over
            text: ''
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.35, "top":1}
            size_hint: 0.3, 0.15

        Label:
            id: blue_player_score
            text: 'Blue player score: '
            color: 63 / 255, 115 / 255, 232 / 255, 0
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.35, "top":0.8}
            size_hint: 0.3, 0.15

        Label:
            id: red_player_score
            text: 'Red player score: '
            color: 203 / 255, 30 / 255, 30 / 255, 0
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.35, "top":0.7}
            size_hint: 0.3, 0.15

        Label:
            id: green_player_score
            text: 'Green player score: '
            color: 53 / 255, 219 / 255, 35 / 255, 0
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.35, "top":0.6}
            size_hint: 0.3, 0.15

        Label:
            id: yellow_player_score
            text: 'Yellow player score: '
            color: 255 / 255, 186 / 255, 0, 0
            font_size: (root.width**2 + root.height**2) / 13**4 + 10
            pos_hint: {"x":0.35, "top":0.5}
            size_hint: 0.3, 0.15

        Button:
            pos_hint:{"x":0.22,"y":0.05}
            size_hint: 0.56, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Play again"
            on_release:
                root.manager.transition.direction = "up"
                root.play_btn()